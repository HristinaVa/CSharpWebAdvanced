@model TeacherDeleteInfoViewModel
@{
    ViewBag.Title = "Delete Teacher";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="post" asp-action="DeleteTeacher">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="ClassGroup" class="control-label"></label>
                <input asp-for="ClassGroup" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>